def warmup_llm():
    try:
        requests.post(
            OLLAMA_URL,
            json={"model": OLLAMA_MODEL, "prompt": "–û—Ç–≤–µ—Ç—å: OK", "stream": False},
            timeout=LLM_TIMEOUT
        )
        logger.info("LLM –ø—Ä–æ–≥—Ä–µ—Ç–∞")
    except Exception as e:
        logger.warning("–û—à–∏–±–∫–∞ –ø—Ä–æ–≥—Ä–µ–≤–∞ LLM: %s", e)


def call_llm(prompt: str) -> Dict[str, Any]:
    """–í—ã–∑—ã–≤–∞–µ—Ç LLM —Å –∞–Ω–∞–ª–∏–∑–æ–º –æ—à–∏–±–æ–∫ –∏ –≤–æ–∑–≤—Ä–∞—Ç–æ–º —Å—Ç—Ä—É–∫—Ç—É—Ä–∏—Ä–æ–≤–∞–Ω–Ω–æ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏"""
    for attempt in range(LLM_MAX_RETRIES):
        try:
            logger.debug(f"–ü–æ–ø—ã—Ç–∫–∞ {attempt + 1}/{LLM_MAX_RETRIES} –∑–∞–ø—Ä–æ—Å–∞ –∫ LLM")
            
            r = requests.post(
                OLLAMA_URL,
                json={
                    "model": OLLAMA_MODEL,
                    "prompt": prompt,
                    "stream": False,
                    "options": {
                        "temperature": 0.0,
                        "num_ctx": 100000,
                        "num_predict": 4096,
                        "top_p": 0.9,
                        "repeat_penalty": 1.1
                    }
                },
                timeout=LLM_TIMEOUT
            )
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—Ç–∞—Ç—É—Å –æ—Ç–≤–µ—Ç–∞
            if r.status_code != 200:
                error_info = analyze_ollama_error(
                    Exception(f"HTTP {r.status_code}: {r.text[:200]}"),
                    r
                )
                
                logger.warning(f"–û—à–∏–±–∫–∞ HTTP {r.status_code} –æ—Ç LLM: {error_info}")
                
                # –í–æ–∑–≤—Ä–∞—â–∞–µ–º —Å—Ç—Ä—É–∫—Ç—É—Ä–∏—Ä–æ–≤–∞–Ω–Ω—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ–± –æ—à–∏–±–∫–µ
                return {
                    "action": "final",
                    "Text": error_info['message'],
                    "Result": {
                        "error_type": error_info['type'],
                        "details": error_info['details'],
                        "suggestion": get_error_suggestion(error_info['type'])
                    }
                }
            
            r.raise_for_status()
            
            response_data = r.json()
            raw_text = response_data.get("response", "")
            
            # –ò–∑–≤–ª–µ–∫–∞–µ–º JSON –∏–∑ –æ—Ç–≤–µ—Ç–∞
            json_str = find_valid_json(raw_text)
            
            if not json_str:
                logger.warning(f"JSON –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ –æ—Ç–≤–µ—Ç–µ LLM (–ø–æ–ø—ã—Ç–∫–∞ {attempt + 1})")
                if attempt < LLM_MAX_RETRIES - 1:
                    time.sleep(LLM_RETRY_DELAY * (attempt + 1))
                    continue
                raise ValueError("LLM –≤–µ—Ä–Ω—É–ª–∞ –Ω–µ JSON")
            
            # –ü–∞—Ä—Å–∏–º JSON
            try:
                result = json.loads(json_str)
            except json.JSONDecodeError as e:
                logger.warning(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ JSON (–ø–æ–ø—ã—Ç–∫–∞ {attempt + 1}): {e}")
                if attempt < LLM_MAX_RETRIES - 1:
                    time.sleep(LLM_RETRY_DELAY * (attempt + 1))
                    continue
                raise
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å—Ç—Ä—É–∫—Ç—É—Ä—É
            if not validate_json_structure(result):
                logger.warning(f"–ù–µ–≤–µ—Ä–Ω–∞—è —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ JSON (–ø–æ–ø—ã—Ç–∫–∞ {attempt + 1}): {result}")
                if attempt < LLM_MAX_RETRIES - 1:
                    time.sleep(LLM_RETRY_DELAY * (attempt + 1))
                    continue
                raise ValueError("–ù–µ–≤–µ—Ä–Ω–∞—è —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ JSON –æ—Ç–≤–µ—Ç–∞")
            
            return result
            
        except requests.RequestException as e:
            error_info = analyze_ollama_error(e)
            logger.warning(f"–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è —Å LLM (–ø–æ–ø—ã—Ç–∫–∞ {attempt + 1}): {error_info}")
            
            if attempt < LLM_MAX_RETRIES - 1:
                time.sleep(LLM_RETRY_DELAY * (attempt + 1))
                continue
            else:
                return {
                    "action": "final",
                    "Text": error_info['message'],
                    "Result": {
                        "error_type": error_info['type'],
                        "details": error_info['details'],
                        "suggestion": get_error_suggestion(error_info['type'])
                    }
                }
                
        except (json.JSONDecodeError, ValueError) as e:
            logger.warning(f"–û—à–∏–±–∫–∞ –¥–∞–Ω–Ω—ã—Ö –æ—Ç LLM (–ø–æ–ø—ã—Ç–∫–∞ {attempt + 1}): {e}")
            if attempt < LLM_MAX_RETRIES - 1:
                time.sleep(LLM_RETRY_DELAY * (attempt + 1))
                continue
            else:
                return {
                    "action": "final",
                    "Text": "LLM –≤–µ—Ä–Ω—É–ª–∞ –Ω–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –æ—Ç–≤–µ—Ç",
                    "Result": {
                        "error_type": "invalid_response",
                        "details": {"error": str(e)},
                        "suggestion": "–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–µ—Ä–µ—Ñ–æ—Ä–º—É–ª–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø—Ä–æ—Å"
                    }
                }
                
        except Exception as e:
            error_info = analyze_ollama_error(e)
            logger.error(f"–ù–µ–æ–∂–∏–¥–∞–Ω–Ω–∞—è –æ—à–∏–±–∫–∞ –≤ call_llm: {error_info}")
            
            if attempt < LLM_MAX_RETRIES - 1:
                time.sleep(LLM_RETRY_DELAY * (attempt + 1))
                continue
            else:
                return {
                    "action": "final",
                    "Text": error_info['message'],
                    "Result": {
                        "error_type": error_info['type'],
                        "details": error_info['details'],
                        "suggestion": get_error_suggestion(error_info['type'])
                    }
                }


# ================== PROMPT ==================
def build_prompt(messages, tools, include_tools):
    parts = [SYSTEM_PROMPT.strip()]
    
    if include_tools and tools:
        parts.append("–î–û–°–¢–£–ü–ù–´–ï –ò–ù–°–¢–†–£–ú–ï–ù–¢–´:")
        for t in tools.values():
            tool_desc = f"{t['name']}: {t.get('description', '–ë–µ–∑ –æ–ø–∏—Å–∞–Ω–∏—è')}"
            input_schema = t.get('inputSchema', {})
            if input_schema:
                tool_desc += f"\n–ü–∞—Ä–∞–º–µ—Ç—Ä—ã: {json.dumps(input_schema, ensure_ascii=False)}"
            parts.append(tool_desc)
    
    for m in messages:
        if m["role"] == "user":
            parts.append(f"–í–û–ü–†–û–° –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–Ø:\n{m['content']}")
        elif m["role"] == "tool":
            content = m['content']
            
            # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç –¥–ª—è –ª—É—á—à–µ–π —á–∏—Ç–∞–µ–º–æ—Å—Ç–∏
            if isinstance(content, dict):
                # –ï—Å–ª–∏ –µ—Å—Ç—å –æ—à–∏–±–∫–∞, –≤—ã–¥–µ–ª—è–µ–º –µ—ë
                if content.get('isError', False):
                    parts.append("–†–ï–ó–£–õ–¨–¢–ê–¢ –ò–ù–°–¢–†–£–ú–ï–ù–¢–ê (–û–®–ò–ë–ö–ê):")
                    
                    # –ò–∑–≤–ª–µ–∫–∞–µ–º —Ç–µ–∫—Å—Ç –æ—à–∏–±–∫–∏ –µ—Å–ª–∏ –µ—Å—Ç—å
                    error_text = ""
                    if 'content' in content and isinstance(content['content'], list) and len(content['content']) > 0:
                        first_item = content['content'][0]
                        if isinstance(first_item, dict) and 'text' in first_item:
                            error_text = first_item['text']
                    
                    if error_text:
                        parts.append(f"–°–æ–æ–±—â–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ: {error_text[:500]}")
                    else:
                        parts.append(json.dumps(content, ensure_ascii=False, indent=2))
                    
                    # –î–æ–±–∞–≤–ª—è–µ–º –ø–æ–¥—Å–∫–∞–∑–∫—É –¥–ª—è LLM
                    parts.append("–í–ù–ò–ú–ê–ù–ò–ï: –ò–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç –≤–µ—Ä–Ω—É–ª –æ—à–∏–±–∫—É. –ü—Ä–æ–≤–µ—Ä—å –ø—Ä–∞–≤–∏–ª—å–Ω–æ—Å—Ç—å –∞—Ä–≥—É–º–µ–Ω—Ç–æ–≤.")
                
                # –ï—Å–ª–∏ —ç—Ç–æ —Å–ø–∏—Å–æ–∫ –æ–±—ä–µ–∫—Ç–æ–≤, –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –≤ —É–¥–æ–±–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ
                elif 'content' in content and isinstance(content['content'], list):
                    obj_list = content['content']
                    parts.append(f"–†–ï–ó–£–õ–¨–¢–ê–¢ –ò–ù–°–¢–†–£–ú–ï–ù–¢–ê (–Ω–∞–π–¥–µ–Ω–æ {len(obj_list)} –æ–±—ä–µ–∫—Ç–æ–≤):")
                    
                    # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–µ—Ä–≤—ã–µ 10 –æ–±—ä–µ–∫—Ç–æ–≤ –¥–ª—è –Ω–∞–≥–ª—è–¥–Ω–æ—Å—Ç–∏
                    for i, item in enumerate(obj_list[:10], 1):
                        if isinstance(item, dict):
                            # –í—ã–≤–æ–¥–∏–º –Ω–∞–∏–±–æ–ª–µ–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ç–∏–≤–Ω—ã–µ –ø–æ–ª—è
                            name = item.get('name', item.get('title', '–ë–µ–∑ –Ω–∞–∑–≤–∞–Ω–∏—è'))
                            parts.append(f"{i}. {name}")
                            # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è –µ—Å–ª–∏ –µ—Å—Ç—å
                            additional = []
                            for key in ['type', 'description', 'synonym']:
                                if key in item and item[key]:
                                    additional.append(f"{key}: {item[key]}")
                            if additional:
                                parts.append(f"   ({', '.join(additional)})")
                        else:
                            parts.append(f"{i}. {item}")
                    
                    if len(obj_list) > 10:
                        parts.append(f"... –∏ –µ—â–µ {len(obj_list) - 10} –æ–±—ä–µ–∫—Ç–æ–≤")
                else:
                    parts.append(f"–†–ï–ó–£–õ–¨–¢–ê–¢ –ò–ù–°–¢–†–£–ú–ï–ù–¢–ê:\n{json.dumps(content, ensure_ascii=False, indent=2)}")
            else:
                parts.append(f"–†–ï–ó–£–õ–¨–¢–ê–¢ –ò–ù–°–¢–†–£–ú–ï–ù–¢–ê:\n{json.dumps(content, ensure_ascii=False, indent=2)}")
    
    parts.append("\n" + "="*50 + "\n–¢–í–û–ô –û–¢–í–ï–¢ (–¢–û–õ–¨–ö–û JSON, –ø–æ–º–Ω–∏ –ø—Ä–æ —Ñ–æ—Ä–º–∞—Ç —Å Text –∏ Result):")
    
    return "\n\n".join(parts)


def hash_tool_call(name, args):
    """–°–æ–∑–¥–∞–µ—Ç —Ö—ç—à –¥–ª—è —É–Ω–∏–∫–∞–ª—å–Ω–æ–π –∏–¥–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ü–∏–∏ –≤—ã–∑–æ–≤–∞ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞"""
    return sha1(json.dumps({"name": name, "args": args}, sort_keys=True).encode()).hexdigest()


# ================== HTTP SERVER ==================
class Handler(BaseHTTPRequestHandler):
    def log_message(self, format, *args):
        """–û—Ç–∫–ª—é—á–∞–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–µ –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ –∑–∞–ø—Ä–æ—Å–æ–≤ –æ—Ç BaseHTTPRequestHandler"""
        pass
    
    def do_POST(self):
        start_time = time.time()
        try:
            # –ß—Ç–µ–Ω–∏–µ –∑–∞–ø—Ä–æ—Å–∞
            content_length = int(self.headers.get('Content-Length', 0))
            if content_length == 0:
                self.reply(400, create_error_response(
                    "–ü—É—Å—Ç–æ–µ —Ç–µ–ª–æ –∑–∞–ø—Ä–æ—Å–∞", 
                    "bad_request",
                    {"field": "body"},
                    False
                ))
                return
            
            body = self.rfile.read(content_length)
            data = json.loads(body)
            user_text = data.get("text")
            
            if not user_text:
                self.reply(400, create_error_response(
                    "–ü–æ–ª–µ 'text' –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ", 
                    "bad_request",
                    {"field": "text"},
                    False
                ))
                return
            
            logger.info(f"–ù–æ–≤—ã–π –∑–∞–ø—Ä–æ—Å: {user_text[:100]}...")
            
            # –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∫–æ–Ω—Ç–µ–∫—Å—Ç–∞
            messages = [{"role": "user", "content": user_text}]
            used_calls = set()
            last_tool = None
            repeat_guard = 0
            
            # –°–æ—Ö—Ä–∞–Ω—è–µ–º –ø–æ–ª–Ω—ã–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤ –¥–ª—è –ø–æ—Å–ª–µ–¥—É—é—â–µ–≥–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è
            tool_results = []
            
            # –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –æ–±—Ä–∞–±–æ—Ç–∫–∏
            for step in range(MAX_STEPS):
                logger.debug(f"–®–∞–≥ {step + 1}/{MAX_STEPS}")
                
                # –°—Ç—Ä–æ–∏–º –ø—Ä–æ–º–ø—Ç
                prompt = build_prompt(
                    messages, 
                    AVAILABLE_TOOLS, 
                    include_tools=(step == 0)
                )
                
                # –í—ã–∑—ã–≤–∞–µ–º LLM
                answer = call_llm(prompt)
                
                # –û–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ–º –æ—Ç–≤–µ—Ç
                action = answer.get("action")
                
                if action == "final":
                    logger.info(f"–ó–∞–ø—Ä–æ—Å –∑–∞–≤–µ—Ä—à–µ–Ω –∑–∞ {step + 1} —à–∞–≥–æ–≤")
                    
                    # –û–ø—Ä–µ–¥–µ–ª—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç –æ—à–∏–±–∫–æ–π
                    result = answer.get("Result", {})
                    is_error = is_error_result(result)
                    
                    if is_error:
                        # –≠—Ç–æ –æ—à–∏–±–∫–∞
                        error_type = result.get("error_type", "unknown")
                        details = result.get("details", {})
                        text = answer.get("Text", "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞")
                        
                        self.reply(200, create_error_response(
                            text,
                            error_type,
                            details,
                            False
                        ))
                    else:
                        # –£—Å–ø–µ—à–Ω—ã–π –æ—Ç–≤–µ—Ç
                        text = answer.get("Text", "–ó–∞–ø—Ä–æ—Å —É—Å–ø–µ—à–Ω–æ –æ–±—Ä–∞–±–æ—Ç–∞–Ω")
                        if text in ["", "OK", "–ì–æ—Ç–æ–≤–æ"]:
                            text = "–ó–∞–ø—Ä–æ—Å —É—Å–ø–µ—à–Ω–æ –æ–±—Ä–∞–±–æ—Ç–∞–Ω"
                        
                        # –ï—Å–ª–∏ Result –ø—É—Å—Ç–æ–π, –Ω–æ —É –Ω–∞—Å –µ—Å—Ç—å —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤, –∏—Å–ø–æ–ª—å–∑—É–µ–º –∏—Ö
                        if not result and tool_results:
                            result = tool_results[-1] if isinstance(tool_results[-1], dict) else {"data": tool_results[-1]}
                        
                        self.reply(200, create_success_response(text, result))
                    return
                
                elif action == "call_tool":
                    tool = answer.get("name")
                    args = answer.get("arguments", {})
                    
                    # –í–∞–ª–∏–¥–∞—Ü–∏—è –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞
                    if not tool or tool not in AVAILABLE_TOOLS:
                        messages.append({
                            "role": "tool",
                            "content": {
                                "error": "–ù–ï–ò–ó–í–ï–°–¢–ù–´–ô_–ò–ù–°–¢–†–£–ú–ï–ù–¢",
                                "–¥–æ—Å—Ç—É–ø–Ω—ã–µ_–∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã": list(AVAILABLE_TOOLS.keys())
                            }
                        })
                        continue
                    
                    # –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥—É–±–ª–∏–∫–∞—Ç–æ–≤
                    call_hash = hash_tool_call(tool, args)
                    if call_hash in used_calls:
                        messages.append({
                            "role": "tool",
                            "content": {
                                "error": "–ü–û–í–¢–û–†–ù–´–ô_–í–´–ó–û–í",
                                "–∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç": tool
                            }
                        })
                        continue
                    
                    # –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞—Ü–∏–∫–ª–∏–≤–∞–Ω–∏—è
                    if last_tool == tool:
                        repeat_guard += 1
                        if repeat_guard >= 3:
                            logger.warning(f"–ó–∞—Ü–∏–∫–ª–∏–≤–∞–Ω–∏–µ –Ω–∞ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–µ: {tool}")
                            self.reply(200, create_error_response(
                                "LLM –∑–∞—Ü–∏–∫–ª–∏–ª—Å—è –Ω–∞ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–µ",
                                "loop_detected",
                                {"tool": tool, "steps": step + 1},
                                False
                            ))
                            return
                    else:
                        repeat_guard = 0
                    
                    # –í—ã–∑–æ–≤ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞
                    last_tool = tool
                    used_calls.add(call_hash)
                    
                    logger.info(f"–í—ã–∑–æ–≤ –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞: {tool} —Å –∞—Ä–≥—É–º–µ–Ω—Ç–∞–º–∏: {args}")
                    result = mcp_call_tool(tool, args)
                    
                    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –ø–æ–ª–Ω—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç
                    tool_results.append(result)
                    
                    # –î–æ–±–∞–≤–ª—è–µ–º –≤ –∏—Å—Ç–æ—Ä–∏—é —Å–æ–æ–±—â–µ–Ω–∏–π
                    messages.append({
                        "role": "tool",
                        "content": result
                    })
                    
                else:
                    # –ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ–µ –¥–µ–π—Å—Ç–≤–∏–µ
                    messages.append({
                        "role": "tool",
                        "content": {
                            "error": "–ù–ï–ò–ó–í–ï–°–¢–ù–û–ï_–î–ï–ô–°–¢–í–ò–ï",
                            "action": action
                        }
                    })
            
            # –ü—Ä–µ–≤—ã—à–µ–Ω–æ —á–∏—Å–ª–æ —à–∞–≥–æ–≤
            logger.warning(f"–ü—Ä–µ–≤—ã—à–µ–Ω–æ –º–∞–∫—Å–∏–º–∞–ª—å–Ω–æ–µ —á–∏—Å–ª–æ —à–∞–≥–æ–≤ ({MAX_STEPS})")
            self.reply(200, create_error_response(
                "–ü—Ä–µ–≤—ã—à–µ–Ω–æ —á–∏—Å–ª–æ —à–∞–≥–æ–≤ LLM",
                "max_steps_exceeded",
                {"max_steps": MAX_STEPS, "completed_steps": MAX_STEPS},
                False
            ))
            
        except json.JSONDecodeError as e:
            logger.error(f"–û—à–∏–±–∫–∞ JSON –≤ –∑–∞–ø—Ä–æ—Å–µ: {e}")
            self.reply(400, create_error_response(
                "–ù–µ–≤–∞–ª–∏–¥–Ω—ã–π JSON –≤ –∑–∞–ø—Ä–æ—Å–µ",
                "invalid_json",
                {"error": str(e)},
                False
            ))
            
        except Exception as e:
            logger.exception(f"–ù–µ–æ–∂–∏–¥–∞–Ω–Ω–∞—è –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ–±—Ä–∞–±–æ—Ç–∫–µ –∑–∞–ø—Ä–æ—Å–∞: {e}")
            self.reply(500, create_error_response(
                f"–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞: {str(e)[:100]}",
                "server_error",
                {"error": str(e)},
                False
            ))
            
        finally:
            elapsed = time.time() - start_time
            logger.info(f"–ó–∞–ø—Ä–æ—Å –æ–±—Ä–∞–±–æ—Ç–∞–Ω –∑–∞ {elapsed:.2f} —Å–µ–∫—É–Ω–¥")
    
    def reply(self, code, response_obj):
        """–û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç JSON –æ—Ç–≤–µ—Ç –≤ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ"""
        try:
            # –ì–∞—Ä–∞–Ω—Ç–∏—Ä—É–µ–º, —á—Ç–æ response_obj –∏–º–µ–µ—Ç –ø—Ä–∞–≤–∏–ª—å–Ω—É—é —Å—Ç—Ä—É–∫—Ç—É—Ä—É
            if not isinstance(response_obj, dict):
                response_obj = create_error_response(
                    "–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –æ—Ç–≤–µ—Ç–∞",
                    "invalid_response_format",
                    None,
                    False
                )
            
            # –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–ª–∏—á–∏–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã—Ö –ø–æ–ª–µ–π
            if "Success" not in response_obj:
                # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ–ø—Ä–µ–¥–µ–ª—è–µ–º Success –ø–æ –Ω–∞–ª–∏—á–∏—é error_type –≤ Result
                result = response_obj.get("Result", {})
                if isinstance(result, dict) and "error_type" in result:
                    response_obj["Success"] = False
                else:
                    response_obj["Success"] = True
            
            if "Text" not in response_obj:
                response_obj["Text"] = ""
            
            if "Result" not in response_obj:
                response_obj["Result"] = {}
            
            body = json.dumps(response_obj, ensure_ascii=False, indent=2).encode('utf-8')
            self.send_response(code)
            self.send_header('Content-Type', 'application/json; charset=utf-8')
            self.send_header('Content-Length', str(len(body)))
            self.end_headers()
            self.wfile.write(body)
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ –æ—Ç–≤–µ—Ç–∞: {e}")
            if not self.headers_sent:
                error_response = create_error_response(
                    f"–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ –æ—Ç–≤–µ—Ç–∞: {str(e)[:100]}",
                    "response_error",
                    None,
                    False
                )
                error_body = json.dumps(error_response, ensure_ascii=False).encode('utf-8')
                self.send_response(500)
                self.send_header('Content-Type', 'application/json; charset=utf-8')
                self.send_header('Content-Length', str(len(error_body)))
                self.end_headers()
                self.wfile.write(error_body)


