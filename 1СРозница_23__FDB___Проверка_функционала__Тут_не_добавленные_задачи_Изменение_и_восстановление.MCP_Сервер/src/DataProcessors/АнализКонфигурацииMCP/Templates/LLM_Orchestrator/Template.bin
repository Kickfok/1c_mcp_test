        "timeout_error": "–ü—Ä–µ–≤—ã—à–µ–Ω–æ –≤—Ä–µ–º—è –æ–∂–∏–¥–∞–Ω–∏—è. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —É–ø—Ä–æ—Å—Ç–∏—Ç—å –∑–∞–ø—Ä–æ—Å –∏–ª–∏ —É–≤–µ–ª–∏—á—å—Ç–µ —Ç–∞–π–º–∞—É—Ç.",
        "connection_error": "–ü—Ä–æ–±–ª–µ–º–∞ —Å –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ–º –∫ —Å–µ—Ä–≤–µ—Ä—É LLM. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ, –∑–∞–ø—É—â–µ–Ω –ª–∏ —Å–µ—Ä–≤–µ—Ä Ollama.",
        "model_error": f"–ú–æ–¥–µ–ª—å {OLLAMA_MODEL} –Ω–µ –Ω–∞–π–¥–µ–Ω–∞. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ –º–æ–¥–µ–ª—å –∑–∞–≥—Ä—É–∂–µ–Ω–∞ –≤ Ollama.",
        "context_error": "–ó–∞–ø—Ä–æ—Å —Å–ª–∏—à–∫–æ–º –¥–ª–∏–Ω–Ω—ã–π –¥–ª—è –º–æ–¥–µ–ª–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —É–ø—Ä–æ—Å—Ç–∏—Ç—å –∑–∞–ø—Ä–æ—Å.",
        "server_error": "–í–Ω—É—Ç—Ä–µ–Ω–Ω—è—è –æ—à–∏–±–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞ LLM. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–æ–∑–∂–µ –∏–ª–∏ –ø–µ—Ä–µ–∑–∞–ø—É—Å—Ç–∏—Ç–µ —Å–µ—Ä–≤–µ—Ä Ollama.",
        "invalid_response": "LLM –≤–µ—Ä–Ω—É–ª–∞ –Ω–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –æ—Ç–≤–µ—Ç. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–µ—Ä–µ—Ñ–æ—Ä–º—É–ª–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø—Ä–æ—Å.",
        "unknown": "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑."
    }
    return suggestions.get(error_type, suggestions["unknown"])


def create_success_response(text: str, result: Any) -> Dict[str, Any]:
    """–°–æ–∑–¥–∞–µ—Ç —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π —É—Å–ø–µ—à–Ω—ã–π –æ—Ç–≤–µ—Ç"""
    return {
        "Success": True,
        "Text": text,
        "Result": result
    }


def create_error_response(text: str, error_type: str = "unknown", details: Optional[Dict] = None, success: bool = False) -> Dict[str, Any]:
    """–°–æ–∑–¥–∞–µ—Ç —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π –æ—Ç–≤–µ—Ç —Å –æ—à–∏–±–∫–æ–π"""
    return {
        "Success": success,
        "Text": text,
        "Result": {
            "error_type": error_type,
            "details": details or {},
            "suggestion": get_error_suggestion(error_type)
        }
    }


def is_error_result(result: Dict[str, Any]) -> bool:
    """–ü—Ä–æ–≤–µ—Ä—è–µ—Ç, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç –æ—à–∏–±–∫–æ–π"""
    if not isinstance(result, dict):
        return False
    
    # –ï—Å–ª–∏ –µ—Å—Ç—å –ø–æ–ª–µ error_type, —ç—Ç–æ –æ—à–∏–±–∫–∞
    if "error_type" in result:
        return True
    
    # –ï—Å–ª–∏ —ç—Ç–æ —Ä–µ–∑—É–ª—å—Ç–∞—Ç –æ—Ç MCP –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–∞ —Å isError = True
    if result.get("isError", False):
        return True
    
    # –ï—Å–ª–∏ –≤ content –µ—Å—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ
    if isinstance(result.get("content"), list) and len(result["content"]) > 0:
        first_item = result["content"][0]
        if isinstance(first_item, dict) and "text" in first_item:
            error_text = first_item["text"].lower()
            if any(word in error_text for word in ["–æ—à–∏–±–∫–∞", "error", "exception", "failed"]):
                return True
    
    return False


# ================== MCP ==================
def mcp_request(payload):
    try:
        r = requests.post(MCP_URL, json=payload, timeout=MCP_TIMEOUT, verify=False)
        if r.status_code == 204 or not r.text.strip():
            return None
        r.raise_for_status()
        return r.json()
    except Exception as e:
        logger.warning("–û—à–∏–±–∫–∞ MCP –∑–∞–ø—Ä–æ—Å–∞: %s", e)
        return {"result": {"content": [], "isError": True}}


def mcp_initialize():
    logger.info("MCP initialize")
    mcp_request({"jsonrpc": "2.0", "id": 1, "method": "initialize", "params": {}})


def mcp_list_tools():
    data = mcp_request({"jsonrpc": "2.0", "id": 2, "method": "tools/list", "params": {}})
    if not data or "result" not in data:
        return []
    return data["result"].get("tools", [])


def mcp_call_tool(name, arguments):
    payload = {"jsonrpc": "2.0", "id": 3, "method": "tools/call", "params": {"name": name, "arguments": arguments}}
    logger.info("MCP CALL: %s %s", name, arguments)
    data = mcp_request(payload)
    result = data.get("result", {"content": [], "isError": False}) if data else {"content": [], "isError": False}
    return result


